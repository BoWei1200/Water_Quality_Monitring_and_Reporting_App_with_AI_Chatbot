<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeReportStatus">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/employeeReportStatus_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/mainTheme"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/Toolbar_back_button_style"
        app:title="Report Status"
        app:titleMargin="2dp"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/employeeReportStatus_toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employeeReportStatus_txt_reportID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Report# "
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="26dp"
                    android:layout_marginBottom="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/employeeReportStatus_cv_reportStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    app:cardCornerRadius="7dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportDateHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Report Date : "
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportDate"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text=" 2021/20/20"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportTimeHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Report Time : "
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text=" --.--.--"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportAddressHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Report Address : "
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text="address line"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportLaLongitude"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportLaLongitudeHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Latitude, Longitude :"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportLaLongitude"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text="000000, 00000"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportOrg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportOrgHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Assigned Organization :"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportOrg"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text="organization"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportDurationHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Estimated Cleaning Duration :"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportDuration"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text=" - "
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>

                                <EditText
                                    android:id="@+id/employeeReportStatus_eTxt_reportDuration"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:textSize="16dp"
                                    android:inputType="number"
                                    android:hint=" day"
                                    android:textStyle="bold"
                                    android:visibility="gone"/>

                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportCause"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportCauseHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Cause(s) of Pollution :"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportCause"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text=" - "
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>

                                <EditText
                                    android:id="@+id/employeeReportStatus_eTxt_reportCause"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:textSize="16dp"
                                    android:inputType="number"
                                    android:textStyle="bold"
                                    android:visibility="gone"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportDesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportDescHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Report Description :"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportDesc"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text="description description "
                                    android:inputType="textMultiLine"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportBadWQI"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportBadWQIHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Reported WQI :"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportBadWQI"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text=" - "
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                            <TableRow
                                android:id="@+id/employeeReportStatus_tableRow_reportStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:paddingBottom="20dp">

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportStatusHeader"
                                    android:layout_height="match_parent"
                                    android:layout_width="0dp"
                                    android:layout_column="1"
                                    android:text="Report Status :"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textColor="#9A9A9A"
                                    android:layout_weight="4"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_reportStatus"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_column="2"
                                    android:layout_weight="6"
                                    android:fontFamily="@font/nunito_sans"
                                    android:gravity="center_vertical"
                                    android:text="Report Status"
                                    android:inputType="textMultiLine"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </TableRow>

                        </TableLayout>

                        <View
                            android:layout_height="1dip"
                            android:layout_width="match_parent"
                            android:background="#FF909090"
                            android:layout_marginBottom="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="20dp"
                            android:onClick="viewImage">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Uploaded Image(s)"
                                android:fontFamily="@font/nunito_sans"
                                android:textSize="18dp"
                                android:padding="5dp"/>

                            <ImageView
                                android:id="@+id/employeeReportStatus_img_arrowRightOrDown"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_right_icon"/>

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/employeeReportStatus_constraintLayout_images"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@drawable/dashlineborder"
                            android:onClick="toImageViewer"
                            android:visibility="gone"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight=".5">

                            <LinearLayout
                                android:id="@+id/employeeReportStatus_linearLayout_previous"
                                android:layout_width="50dp"
                                android:layout_height="90dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:padding="10dp"
                                android:onClick="viewPrevious"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/employeeReportStatus_img_previous"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/arrowprevious" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/employeeReportStatus_linearLayout_next"
                                android:layout_width="50dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:onClick="viewNext"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/userReportStatus_img_next"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/arrownext" />
                            </LinearLayout>


                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/employeeReportStatus_img_pollutionPhoto"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/takephoto"
                                app:shapeAppearanceOverlay="@style/roundedCornersImg"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/employeeReportStatus_linearLayout_belowImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!--INV doc-->
                            <LinearLayout
                                android:id="@+id/employeeReportStatus_linearLayout_InvDoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_height="1dip"
                                    android:layout_width="match_parent"
                                    android:background="#FF909090"
                                    android:layout_marginBottom="20dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_InvDocHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Investigation Documentation"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textSize="18dp"
                                    android:padding="5dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_INDocURL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=" - "
                                    android:visibility="gone"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginLeft="10dp"/>

                                <Button
                                    android:id="@+id/employeeReportStatus_btn_upload"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload"
                                    android:visibility="gone"
                                    android:onClick="upload"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textAllCaps="false"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="20dp"/>

                                <LinearLayout
                                    android:id="@+id/employeeReportStatus_linearLayout_uploadedURL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="20dp"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/employeeReportStatus_txt_uploadedURL"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".92"
                                        android:text="uploaded URL"
                                        android:padding="10dp"/>

                                    <ImageView
                                        android:id="@+id/employeeReportStatus_img_removeUploadedFile"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".08"
                                        android:onClick="removeFile"
                                        android:src="@drawable/ic_reportrejected_icon"
                                        android:background="@drawable/circle_img_rejected"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </LinearLayout>

                            </LinearLayout>

                            <!--Resolving doc-->
                            <LinearLayout
                                android:id="@+id/employeeReportStatus_linearLayout_resolvingDoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_height="1dip"
                                    android:layout_width="match_parent"
                                    android:background="#FF909090"
                                    android:layout_marginBottom="20dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Pollution Resolving Documentation"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/nunito_sans"
                                    android:textSize="18dp"
                                    android:padding="5dp"/>

                                <TextView
                                    android:id="@+id/employeeReportStatus_txt_resolvingDocURL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ResolvingDocURL"
                                    android:visibility="gone"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginLeft="10dp"/>

                                <Button
                                    android:id="@+id/employeeReportStatus_btn_uploadResolvingDoc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload"
                                    android:visibility="gone"
                                    android:fontFamily="@font/nunito_sans"
                                    android:onClick="upload"
                                    android:textAllCaps="false"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="20dp"/>

                                <LinearLayout
                                    android:id="@+id/employeeReportStatus_linearLayout_uploadedResolvingDocURL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="20dp"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/employeeReportStatus_txt_uploadedResolvingDocURL"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".92"
                                        android:padding="10dp"
                                        android:text="Uploaded URL"/>

                                    <ImageView
                                        android:id="@+id/employeeReportStatus_img_removeUploadedresolvingFile"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".08"
                                        android:onClick="removeFile"
                                        android:src="@drawable/ic_reportrejected_icon"
                                        android:background="@drawable/circle_img_rejected"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <!--Submit, update, approve, reject Button-->
                            <LinearLayout
                                android:id="@+id/employeeReportStatus_linearLayout_btns"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_height="1dip"
                                    android:layout_width="match_parent"
                                    android:background="#FF909090"
                                    android:layout_marginBottom="20dp"/>

                                <!--Submit Button-->
                                <LinearLayout
                                    android:id="@+id/employeeReportStatus_linearLayout_btnSubmit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="20dp"
                                    android:visibility="gone"
                                    android:gravity="center">

                                    <Button
                                        android:id="@+id/employeeReportStatus_btn_submit"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:text="Submit"
                                        android:padding="10dp"
                                        android:textSize="18dp"
                                        android:fontFamily="@font/nunito_sans"
                                        android:textAllCaps="false"
                                        android:backgroundTint="@color/circle_img_resolving" />

                                </LinearLayout>

                                <!--Update btn-->
                                <LinearLayout
                                    android:id="@+id/employeeReportStatus_linearLayout_btnUpdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="20dp"
                                    android:visibility="gone"
                                    android:gravity="center">

                                    <Button
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:text="Update"
                                        android:padding="10dp"
                                        android:textSize="18dp"
                                        android:fontFamily="@font/nunito_sans"
                                        android:textAllCaps="false"
                                        android:backgroundTint="@color/circle_img_resolving"
                                        android:onClick="update"/>

                                </LinearLayout>

                                <!--Approve & Reject Button-->
                                <LinearLayout
                                    android:id="@+id/employeeReportStatus_linearLayout_btnApproveReject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="20dp"
                                    android:visibility="gone">

                                    <Button
                                        android:id="@+id/employeeReportStatus_btn_approve"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".5"
                                        android:layout_marginRight="5dp"
                                        android:text="Approve"
                                        android:padding="10dp"
                                        android:textSize="18dp"
                                        android:fontFamily="@font/nunito_sans"
                                        android:textAllCaps="false"
                                        android:backgroundTint="@color/circle_img_resolved"
                                        android:onClick="approveOrReject"/>

                                    <Button
                                        android:id="@+id/employeeReportStatus_btn_reject"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".5"
                                        android:layout_marginLeft="5dp"
                                        android:text="Reject"
                                        android:padding="10dp"
                                        android:textSize="18dp"
                                        android:fontFamily="@font/nunito_sans"
                                        android:textAllCaps="false"
                                        android:backgroundTint="@color/circle_img_rejected"
                                        android:onClick="approveOrReject"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>