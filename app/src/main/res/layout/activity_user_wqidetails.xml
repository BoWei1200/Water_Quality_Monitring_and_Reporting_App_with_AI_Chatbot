<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserWQIDetails">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/userWQIDetails_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/mainTheme"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/Toolbar_back_button_style"
        app:title=""
        app:titleMargin="2dp"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/userWQIDetails_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Title Title"
        android:fontFamily="@font/nunito_sans"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userWQIDetails_toolbar"
        android:padding="15dp"/>

    <ImageView
        android:id="@+id/userWQIDetails_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userWQIDetails_txt_title"
        app:srcCompat="@drawable/rivericon"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/userWQIDetails_txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/nunito_sans"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/userWQIDetails_img" />

</androidx.constraintlayout.widget.ConstraintLayout>