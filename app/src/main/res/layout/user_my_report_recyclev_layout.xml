<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/userMyReportRecycleVLayout_cv_reportList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#fbfcfe"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/userMyReportRecycleVLayout_img_reportListIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight=".2"
                    android:background="@drawable/circle_img_pending"
                    android:padding="5dp"
                    android:src="@drawable/ic_reportpending_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/userMyReportRecycleVLayout_txt_reportIDHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center_vertical"
                        android:layout_weight=".15"
                        android:text="ID : "
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userMyReportRecycleVLayout_txt_reportID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_sans"
                        android:layout_weight=".85"
                        android:gravity="center_vertical"
                        android:text="00000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TableRow
                    android:id="@+id/userMyReportRecycleVLayout_tableRow_reportDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/userMyReportRecycleVLayout_txt_reportDateHeader"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Report Date : "
                        android:textColor="#9A9A9A"
                        android:layout_weight="2"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/userMyReportRecycleVLayout_txt_reportDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_weight="8"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center_vertical"
                        android:text=" 2021/20/20"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </TableRow>

                <TableRow
                    android:id="@+id/userMyReportRecycleVLayout_tableRow_reportTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/userMyReportRecycleVLayout_txt_reportTimeHeader"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Report Time : "
                        android:textColor="#9A9A9A"
                        android:layout_weight="2"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/userMyReportRecycleVLayout_txt_reportTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_weight="8"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center_vertical"
                        android:text=" --.--.--"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/userMyReportRecycleVLayout_linearLayout_reportStatus"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".85"
                    android:background="@drawable/rounded_corners_pending"
                    android:layout_margin="10dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/userMyReportRecycleVLayout_txt_reportStatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pending"
                        android:textStyle="bold"
                        android:textColor="@color/circle_img_pending"
                        android:textSize="18dp"
                        android:gravity="center"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/userMyReportRecycleVLayout_cv_arrowForward"
                    android:layout_width="0dp"
                    android:layout_height="49dp"
                    android:layout_weight=".15"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#fbfcfe"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="7dp"
                            android:src="@drawable/ic_arrow_forward_icon" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/userMyReportRecycleVLayout_cv_reportList" />

</androidx.constraintlayout.widget.ConstraintLayout>